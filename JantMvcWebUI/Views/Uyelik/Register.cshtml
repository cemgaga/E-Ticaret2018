@model Jant.Entities.Uye
@{
    ViewBag.Title = "Yeni Üyelik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="http://jquery-ui.googlecode.com/svn/tags/1.6rc5/ui/i18n/ui.datepicker-tr.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Medicalscript.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#textBoxDogum").datepicker({ changeYear: true, yearRange: "-100:+0", dateFormat: "yy-mm-dd" });
        })
    </script>
}


@using (Html.BeginForm("Register", "Uyelik", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-lg-9 login-form">
        <div class="login-form-title">Hemen Üye Olun, Fırsatları Kaçırmayın...</div>
        <div class="form-inputs">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-11">
                    <div class="forminfo">Lütfen aşağıdaki formu eksiksiz doldurunuz.</div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Adınız :</label>
                    @Html.TextBoxFor(p=>p.Ad)
                    @Html.ValidationMessageFor(p =>p.Ad, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-5">
                    <label>Soyadınız :</label>
                    @Html.TextBoxFor(p=>p.Soyad)
                    @Html.ValidationMessageFor(p =>p.Soyad, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-1"></div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>E-Posta :</label>
                    @Html.TextBoxFor(p=>p.Mail)
                    @Html.ValidationMessageFor(p =>p.Mail, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-5">
                    <label>Telefon :</label>
                    @Html.TextBoxFor(p=>p.Telefon)
                    @Html.ValidationMessageFor(p =>p.Telefon, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-1"></div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Şifreniz :</label>
                    @Html.PasswordFor(p=>p.Parola)
                    @Html.ValidationMessageFor(p =>p.Parola, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-5">
                    <label>Adres:</label>
                    @Html.TextBoxFor(p=>p.Adres)
                    @Html.ValidationMessageFor(p =>p.Adres, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-1"></div>
            </div>

        </div>

        <div class="form-inputs">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Doğum Tarihi :</label>
                    @Html.TextBoxFor(p=>p.DogumTarih,new { id = "textBoxDogum" })
                    @Html.ValidationMessageFor(p =>p.DogumTarih, String.Empty,new { @style="color:red;!important"})
                </div>
                <div class="col-sm-1"></div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Aracınızın Resmi :</label>
                     <input type="file" id="Resim" name="Resim" />
                    <div class="col-sm-1"></div>
                </div>
                <div class="col-sm-1"></div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-11">
                    <div class="sozlesme">
                        <input type="radio"><label class="radiolabel"></label><div><a href="#"><span>Üyelik sözleşmesini</span></a> okudum ve kabul ediyorum.</div>
                    </div>
                </div>
            </div>
            <div class="submit green-btn pull-right">
                
                <input type="submit" value="Kaydı Tamamla" /><div class="arrow-down"></div>
             </div>
            
            <div class="clear"></div>
        </div>
    </div>
}



