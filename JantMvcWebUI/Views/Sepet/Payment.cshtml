@{
    Layout = null;
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @* <script src="@Url.Content("~/Scripts/Medicalscript.js")" type="text/javascript"></script>*@
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">


    <title>Payment</title>
    <!-- Responsive Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Main CSS -->
    <link href="~/Content/Css/main.css" rel="stylesheet" type="text/css" />
    <!-- Font Face -->
    <link href="~/Content/Css/font-face.css" rel="stylesheet" type="text/css" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/Css/bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Fontello (IconFont)-->
    <link rel="stylesheet" href="~/Content/Css/fontello.css">
    <link rel="stylesheet" href="~/Content/Css/animation.css">
    <!--[if IE 7]><link rel="stylesheet" href="css/fontello-ie7.css"><![endif]-->
    <!-- Flex Slider -->
    <link rel="stylesheet" href="~/Content/Css/flexslider.css">
    <!-- Responsive -->
    <link rel="stylesheet" href="~/Content/Css/responsive.css">

</head>
<body>
    <div id="fb-root"></div>
    <div id="container">
        <!-- Header -->
        <header>
            <div class="header-bg-wrapper">
                <div class="header-bg">
                </div>
            </div>
            <style>
                #left-menu a, visited {
                    display: block !important;
                    transition: all 0.4s;
                    -moz-transition: all 0.4s;
                    -webkit-transition: all 0.4s;
                }

                #middle {
                    margin: auto;
                }
            </style>
            <div class="container">
                <div class="header-content col-lg-12">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-2"></div>
                            <div class="col-lg-6 login-text"><h1 class="login-text ">Ödeme Sayfası</h1></div>
                        </div>
                        <div class="row" id="sub-header">
                            <a href="/Home/Index"><div class="col-sm-4" id="logo"></div></a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="login-form-title">Kart Bilgileri</div>
            <div class="form-inputs">
                <div class="row add-brand">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-9">
                        <div class="col-sm-4">
                            <label>Kart Sahibi Adı-Soyadı :</label>
                        </div>
                        <div class="col-sm-8">
                            <input type="text" name="name" />
                        </div>
                    </div>

                </div><br />
                <div class="row add-brand">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-9">
                        <div class="col-sm-4"><label>Kart Numarası :</label></div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="4"  />
                        </div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="4"  />
                        </div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="4"  />
                        </div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="4"  />
                        </div>
                    </div>

                </div><br />
                <div class="row add-brand">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-9">
                        <div class="col-sm-5"><label>Son Kullanma Tarihi (Ay)/(Yıl) :</label></div>
                        <div class="col-sm-3"></div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="2"  />
                        </div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="4"  />
                        </div>
                    </div>

                </div><br />
                <div class="row add-brand">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-9">
                        <div class="col-sm-4"><label>Kart Şifresi / CVV No :</label></div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="4" />
                        </div>
                        <div class="col-sm-2">
                            <input type="text" name="name" maxlength="3"  />
                        </div>
                    </div>

                </div><br/>
                <div class="row add-brand"></div><br />
                <div class="row add-brand">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-9">
                        <div class="col-sm-4"><label>Ödenecek Toplam Tutar :</label></div>
                        <div class="col-sm-5"></div>
                        <div class="finalprice">@ViewBag.geneltoplam TL</div>
                    </div>

                </div>
                <div class="submit green-btn pull-right">
                    <a href="/Sepet/DoPayment">
                         <input type="submit" value="Ödeme Yap" /><div class="arrow-down"></div>
                    </a>
                </div>

                <div class="clear"></div>
            </div>
        </div>
    </div>
</body>
</html>