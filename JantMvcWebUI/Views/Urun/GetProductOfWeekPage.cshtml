                                                        {
                                                            mail = m.Email,
                                                            jantResimAdi = Model.Resimler[0].ResimUrl,
                                                            controller = "Urun",
                                                            action = "TryWheel",

                                                        }, new { target = "blank"})
                                                    }
                                                   
