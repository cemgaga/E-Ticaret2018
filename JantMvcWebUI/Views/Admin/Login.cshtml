
@{
    Layout = null;
}
@section scripts
{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   @* <script src="@Url.Content("~/Scripts/Medicalscript.js")" type="text/javascript"></script>*@
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">


    <title>Login</title>
    <!-- Responsive Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Main CSS -->
    <link href="~/Content/Css/main.css" rel="stylesheet" type="text/css" />
    <!-- Font Face -->
    <link href="~/Content/Css/font-face.css" rel="stylesheet" type="text/css" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/Css/bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Fontello (IconFont)-->
    <link rel="stylesheet" href="~/Content/Css/fontello.css">
    <link rel="stylesheet" href="~/Content/Css/animation.css">
    <!--[if IE 7]><link rel="stylesheet" href="css/fontello-ie7.css"><![endif]-->
    <!-- Flex Slider -->
    <link rel="stylesheet" href="~/Content/Css/flexslider.css">
    <!-- Responsive -->
    <link rel="stylesheet" href="~/Content/Css/responsive.css">
    
</head>
<body>
    <div id="fb-root"></div>
    <div id="container">
        <!-- Header -->
        <header>
            <div class="header-bg-wrapper">
                <div class="header-bg">
                </div>
            </div>
            <style>
                #left-menu a, visited {
                    display: block !important;
                    transition: all 0.4s;
                    -moz-transition: all 0.4s;
                    -webkit-transition: all 0.4s;
                }
                #middle{
                    margin:auto;
                }
            </style>
            <div class="container">
                <div class="header-content col-lg-12">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-2"></div>
                            <div class="col-lg-6 login-text"><h1 class="login-text ">Admin Paneli</h1></div>
                        </div>
                        <div class="row" id="sub-header">
                            <a href="/Home/Index"><div class="col-sm-4" id="logo"></div></a>  
                        </div>
                    </div>
                </div>
            </div>
        </header>
                @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
                {
                    <div class="col-lg-2"></div>
                    <div class="col-lg-8 login-form">
                        <div class="login-form-title">Admin Girişi</div>
                        <div class="form-inputs">
                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-5">
                                    <label>Kullanıcı Adınız :</label>
                                    @Html.TextBox("k_adi")
                                </div>
                                <div class="col-sm-5">
                                    <label>Şifreniz :</label>
                                    @Html.Password("parola")
                                </div>
                                <div class="col-sm-1"></div>
                            </div>
                            @ViewBag.dogru
                            <div class="submit green-btn pull-right">
                                <input type="submit" value="Giriş Yap" /><div class="arrow-down"></div>
                            </div>

                            <div class="clear"></div>
                        </div>
                    </div>
                }
    </div>
</body>
</html>
