@model Jant.Entities.Urun
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/smoothness/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   @* <script src="@Url.Content("~/Scripts/Medicalscript.js")" type="text/javascript"></script>*@
}

@using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-lg-9 login-form">
        <div class="login-form-title">Yeni Ürün Ekleme Sayfası..</div>
        <div class="form-inputs">
            <div class="row">
                <div class="col-lg-1"></div>
                <div class="col-lg-11">
                    <div class="forminfo">Lütfen aşağıdaki formu eksiksiz doldurunuz.</div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    @Html.DropDownListFor(p => p.Marka.MarkaId, new SelectList (ViewBag.Markalar,"Value","Text" ))
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">

                    <span><i class="icon-right-open"></i>Jant Tipi:</span>
                    <div>
                        <div style="float:left;font-family:gothamrounded;margin-left:30px">
                            @Html.RadioButtonFor(model => model.KategoriId, "1", new { @checked = true }) Aliminyum
                        </div>
                        <div style="float:left;font-family:gothamrounded;margin-left:30px">
                            @Html.RadioButtonFor(model => model.KategoriId, "2") Çelik
                        </div>
                        <div style="float:left;font-family:gothamrounded;margin-left:30px">
                            @Html.RadioButtonFor(model => model.KategoriId, "3") Sac
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Ürün Kodu :</label>
                    @Html.TextBoxFor(p => p.UrunKodu)
                    @Html.ValidationMessageFor(p => p.UrunKodu, String.Empty, new { @style = "color:red;!important" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <div>
                        <span><i class="icon-right-open"></i>Jant Çapı(İnç):</span>
                        <div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "13", new { @checked = true }) 13
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "14") 14
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "15") 15
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "16") 16
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "17") 17
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "18") 18
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "19") 19
                            </div>
                            <div style="float:left;font-family:gothamrounded;margin-left:30px">
                                @Html.RadioButtonFor(model => model.Cap, "22") 22
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Ürün Fiyatı (TL) :</label>
                    @Html.TextBoxFor(p => p.Fiyat)
                    @Html.ValidationMessageFor(p => p.Fiyat, String.Empty, new { @style = "color:red;!important" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Ana Jant Resmi :</label>
                    @Html.TextBoxFor(p => p.Resimler, new { type = "file"})
                    <div class="col-sm-1"></div>
                </div>
                <div class="col-sm-1"></div>
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Jantın Diğer Resimleri :</label>
                    @Html.TextBoxFor(p => p.Resimler, new { type = "file", multiple = "true" })
                    <div class="col-sm-1"></div>
                </div>
                <div class="col-sm-1"></div>
            </div>
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-5">
                    <label>Ürün Açıklaması :</label>
                    @Html.TextBoxFor(p => p.Aciklama)
                </div>
            </div>
            <div class="submit green-btn pull-right">

                <input type="submit" value="Ürünü Ekle" /><div class="arrow-down"></div>
            </div>
        </div>
    </div>
  
}
