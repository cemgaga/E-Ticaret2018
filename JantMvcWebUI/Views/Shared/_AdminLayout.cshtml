<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">


    <title>@ViewBag.Title </title>
    <!-- Responsive Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Main CSS -->
    <link href="~/Content/Css/main.css" rel="stylesheet" type="text/css" />
    <!-- Font Face -->
    <link href="~/Content/Css/font-face.css" rel="stylesheet" type="text/css" />
    <!-- Bootstrap CSS -->
    <link href="~/Content/Css/bootstrap.css" rel="stylesheet" type="text/css" />
    <!--[if IE 7]><link rel="stylesheet" href="css/fontello-ie7.css"><![endif]-->
    <!-- Responsive -->
    <link rel="stylesheet" href="~/Content/Css/responsive.css">
    <link rel="stylesheet" href="~/Content/Css/fontello.css">
    <link rel="stylesheet" href="~/Content/Css/animation.css">
    <!--[if IE 7]><link rel="stylesheet" href="css/fontello-ie7.css"><![endif]-->


</head>
<body>
    <div id="fb-root"></div>
    <div id="container">
        <!-- Header -->
        <header>
            <div class="header-bg-wrapper">
                <div class="header-bg">
                </div>
            </div>
            <style>
                #left-menu a, visited {
                    display: block !important;
                    transition: all 0.4s;
                    -moz-transition: all 0.4s;
                    -webkit-transition: all 0.4s;
                }
                .login-text a:hover{
                    color:#428bca;
                    display:block;
                }

            </style>
            <div class="container">
                <div class="header-content col-lg-12">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-2"></div>
                            <div class="col-lg-6 login-text"><h1 class="login-text ">Admin Paneli</h1></div>
                            <div class="col-lg-4 login-text pull-right"><a href="/Admin/Logout" class="login-text ">Çıkış Yap</a></div>
                        </div>
                        <div class="row" id="sub-header">
                            <a href="/Home/Index"><div class="col-sm-4" id="logo"></div></a>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Content -->
        <div class="container">

            <div id="content" class="col-lg-12">

                <div class="row">
                    <div id="sidebar" class="col-lg-3">
                        <div class="category-title">İşlemler<i class="icon-th-list pull-right"></i></div>
                        <ul id="left-menu" style="position: relative;">
                            <li class="current"><a style="color:white !important" href="#">İşleminizi Seçiniz..</a></li>
                            <li><a href="/Admin/Index">Ürün Güncelle</a></li>
                            <li><a href="/Admin/AddProduct">Ürün Ekle</a></li>
                            <li><a href="/Admin/DeleteProduct">Ürün Sil</a></li>
                            <li><a href="/Admin/AddBrand">Marka İşlemleri</a></li>
                        </ul>
                        
                    </div>
                    @RenderBody()
                </div>
            </div>
        </div>

        <!-- Content Ends -->
    </div>
    <!-- jQuery -->
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script type="text/javascript" src="~/Content/js/bootstrap.js"></script>
    <!-- Main JS File -->
    <script type="text/javascript" src="~/Content/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
